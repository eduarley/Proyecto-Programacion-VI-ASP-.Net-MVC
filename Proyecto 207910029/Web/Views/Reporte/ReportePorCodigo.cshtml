@model Infraestructure.Models.Activo

@{
    ViewBag.Title = "Reporte Por Codigo";
}

<h2>Datos y depreciación</h2>



@using (Ajax.BeginForm("AjaxReportePorCodigo", "Reporte", null, new AjaxOptions
{

    HttpMethod = "POST",
    UpdateTargetId = "resultado"
}, new { id = "AjaxForm" }))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Activo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Consultar" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div id="resultado"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")
}
