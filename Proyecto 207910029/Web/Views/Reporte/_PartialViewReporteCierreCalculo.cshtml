@model IEnumerable<Infraestructure.Models.Depreciacion>

@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DepreciacionMes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepreciacionAcumulada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorResidual)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DepreciacionMes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepreciacionAcumulada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valorResidual)
                </td>

            </tr>
        }

    </table>
}
else
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type='button' class='close' data-dismiss='alert' aria-label='Close'>
            <span aria-hidden='true'>&times;</span>
        </button><strong>No hay registros en el mes solicitado!</strong>
    </div>
}



@{
    decimal? residualTotal = 0;
    


    foreach (var item in Model)
    {
        residualTotal += item.valorResidual;
        
    }

    <div class="pull-right">
        <h6><b>Monto residual total: @residualTotal.Value.ToString("0.00")</b></h6>
        
    </div>

}


