@model Infraestructure.Models.Usuario


@* Se fuerza que no utilice el layout de la aplicación para que no muestre el menú.*@
@{
    Layout = Layout = "~/Views/Shared/_Login.cshtml";;
}

@{
    ViewBag.Title = "Login";
}

<style>
    .box {
        margin: 0px auto auto auto;
        -webkit-box-shadow: -1px 11px 28px -7px rgba(0,0,0,0.75);
        -moz-box-shadow: -1px 11px 28px -7px rgba(0,0,0,0.75);
        box-shadow: -1px 11px 28px -7px rgba(0,0,0,0.75);
        padding: 50px;
       border-radius: 15px;
       width: 450px;
       background-color: white;
       
    }


</style>




@using (Html.BeginForm("Login", "Login"))
{
    @Html.AntiForgeryToken()

<center class="box">
    <div class="form-horizontal ">
        <div class="form-group">
            <img src="~/Images/logo-negro-largo.png" width="250" height="100" />
        </div>

        @if (TempData["Message"] != null)
        {
            string mensaje = @"<div class='alert alert-danger alert-dismissible' role='alert'><button type='button' class='close' data-dismiss='alert' aria-label='Close'>
            <span aria-hidden='true'>&times;</span> </button><strong>Error!</strong> " + TempData["Message"] + " </div>";
            @Html.Raw(mensaje);
        }
        <div class="form-group">

            <div class="">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Identificación" } })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">

            <div class="">

                @Html.PasswordFor(model => model.PasswordHash, new { @class = "form-control", @placeholder = "Contraseña" })
                @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="">
                <input type="submit" value="Iniciar Sesión" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
</center>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
